{
  "compilerOptions": {
    "target": "ESNext",         // Target ECMAScript version
    "module": "NodeNext",       // Module system (commonjs for Node.js)
    "outDir": "./dist",        // Output directory for compiled JavaScript
    "rootDir": "./src",        // Root directory for TypeScript source files
    "moduleResolution": "nodenext",                     /* Specify how TypeScript looks up a file from a given module specifier. */
    "strict": true,            // Enable strict type checking
    "esModuleInterop": true,     // Enables compatibility with CommonJS modules
    "skipLibCheck": true,        // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Enforces consistent casing
    "resolveJsonModule": true, // Allows importing JSON files as modules
    "sourceMap": true,       // Generate source maps for debugging
  },
  "include": ["src/**/*.ts"], // Include all TypeScript files in the src directory
  "exclude": ["node_modules"]  // Exclude node_modules
}
